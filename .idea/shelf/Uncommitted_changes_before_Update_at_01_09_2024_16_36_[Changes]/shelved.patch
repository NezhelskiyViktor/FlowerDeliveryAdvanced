+        <div class="row">
+            <br>
+        </div>
+        <div class="row">
+            {% if user %}
+                <h2 style="text-align: center; color: #a00;">{{ user }}, укажите количество для букета:
+                    <button class="btn btn-success" style="float: right;" type="submit">Выбор сделан</button>
